{
  "manifest_version": 2,

  "name": "Bore Drawer",
  "version": "0.1",
  "description": "Bet365 bore drawer scanner",

  "background": {
    "scripts": [ "background.js" ]
  },

  "options_ui": {
    "page": "src/index.html",
    "open_in_tab": true
  },

  "browser_action": {
    "default_icon": {
      "16": "./src/images/365soccer.png",
      "32": "./src/images/365soccer.png",
      "48": "./src/images/365soccer.png",
      "128": "./src/images/365soccer.png"
    }
  },

  "icons": {
    "16": "./src/images/365soccer.png",
    "32": "./src/images/365soccer.png",
    "48": "./src/images/365soccer.png",
    "128": "./src/images/365soccer.png"
  },

  "permissions": [
    "alarms",
    "contextMenus",
    "storage",
    "tabs",
    "https://www.bet365.com.au/*",
    "https://www.betfair.com.au/*"
  ]
}
